{
  "name": "balansertefakta",
  "version": "0.1.0",
  "private": true,
  "description": "Hierarkisk, balansefokusert sosialt nettverk for strukturerte samfunnsdiskusjoner",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @balansertefakta/api dev",
    "dev:web": "pnpm --filter @balansertefakta/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @balansertefakta/e2e test",
    "db:generate": "pnpm --filter @balansertefakta/api db:generate",
    "db:push": "pnpm --filter @balansertefakta/api db:push",
    "db:migrate": "pnpm --filter @balansertefakta/api db:migrate",
    "db:studio": "pnpm --filter @balansertefakta/api db:studio",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
